<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_get_async"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Async GET"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_get_sync" />

    <Button
        android:id="@+id/btn_get_sync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Sync GET"
        app:layout_constraintTop_toTopOf="@id/btn_get_async"
        app:layout_constraintLeft_toRightOf="@id/btn_get_async"
        app:layout_constraintRight_toLeftOf="@id/btn_post_string"/>

    <Button
        android:id="@+id/btn_post_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="POST String"
        app:layout_constraintTop_toTopOf="@id/btn_get_sync"
        app:layout_constraintLeft_toRightOf="@id/btn_get_sync"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/btn_post_buffer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="POST Buffer"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@id/btn_post_string"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_post_file"/>

    <Button
        android:id="@+id/btn_post_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="POST file"
        app:layout_constraintTop_toTopOf="@id/btn_post_buffer"
        app:layout_constraintLeft_toRightOf="@id/btn_post_buffer"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>