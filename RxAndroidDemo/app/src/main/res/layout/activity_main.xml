<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_rx1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="testRx1"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_rx2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="testRx2"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/button_rx1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/button_just"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="testJust"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/button_rx2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/button_array"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="testFromArray"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/button_just"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/button_iterable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="testFromIterable"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/button_array"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>